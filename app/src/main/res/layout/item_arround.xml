<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <org.raphets.roundimageview.RoundImageView
        android:id="@+id/item_iv"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="17dp"
        android:src="@mipmap/module_loading"
        app:leftBottom_corner_radius="3dp"
        app:leftTop_corner_radius="3dp"
        app:rightBottom_corner_radius="3dp"
        app:rightTop_corner_radius="3dp"
        app:type="round" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_iv"
        android:paddingRight="14dp"
        android:paddingTop="7dp">

        <!--<editor-fold desc="第一部分">-->
        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginLeft="7dp"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:text="为佳凉皮（宋家庄点）"
            android:textColor="@color/grey_black_tv"
            android:textSize="@dimen/text_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignLeft="@id/item_title"
            android:layout_below="@id/item_title"
            android:gravity="left|center_vertical"
            android:text="经营项目:"
            android:textColor="@color/grey_black_tv2"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/item_taglib"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/item_title"
            android:layout_marginLeft="60dp"
            android:ellipsize="end"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:text="餐饮"
            android:textColor="@color/blue_btn"
            android:textSize="@dimen/text_12" />

        <TextView
            android:id="@+id/item_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignLeft="@id/item_title"
            android:layout_below="@id/item_taglib"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:text="营业时间：09：00~22：00"
            android:textColor="@color/grey_black_tv2"
            android:textSize="@dimen/text_12" />

        <TextView
            android:id="@+id/item_distance_tv"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/item_time_tv"
            android:gravity="right|center_vertical"
            android:text="21234m"
            android:textColor="@color/blue_btn"
            android:textSize="@dimen/text_12" />
        <!--</editor-fold>-->

        <View
            style="@style/LineHorizontal"
            android:layout_below="@id/item_time_tv" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_time_tv"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/xiaofeiyouli" />

        <TextView
            android:id="@+id/item_context_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_time_tv"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:maxLines="2"
            android:minHeight="61dp"
            android:paddingBottom="14dp"
            android:paddingLeft="45dp"
            android:paddingRight="40dp"
            android:paddingTop="13dp"
            android:textColor="@color/grey_black_tv3"
            android:textSize="@dimen/text_12" />

        <ImageView
            android:id="@+id/item_open_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/item_time_tv"
            android:paddingTop="16dp"
            android:src="@mipmap/arrows_down" />

        <View
            style="@style/LineHorizontal"
            android:layout_below="@id/item_context_tv" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_context_tv"
            android:paddingLeft="7dp"
            android:paddingTop="14dp"
            android:src="@mipmap/seller_nearby_address" />

        <TextView
            android:id="@+id/item_address_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_context_tv"
            android:lineSpacingExtra="3dp"
            android:paddingBottom="12dp"
            android:paddingLeft="26dp"
            android:paddingRight="40dp"
            android:paddingTop="12dp"
            android:textColor="@color/grey_black_tv3"
            android:textSize="@dimen/text_12" />
    </RelativeLayout>

    <View
        style="@style/LineHorizontal"
        android:layout_alignParentBottom="true" />
</RelativeLayout>