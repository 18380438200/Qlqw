<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ascba.rebate.activities.cash_get.CashGetActivity">
    <com.ascba.rebate.view.MoneyBar
        android:id="@+id/mb"
        app:textTail="提现记录"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:textTitle="提现"/>
    <RelativeLayout
        android:id="@+id/lat_sel_card"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:background="@drawable/white_corner_6dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <TextView
            android:visibility="gone"
            android:id="@+id/lat_empty"
            android:layout_centerVertical="true"
            android:drawablePadding="7dp"
            android:drawableLeft="@mipmap/add_blue"
            android:textColor="@color/grey_black_tv"
            android:textSize="@dimen/text_14"
            android:text="添加银行卡"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/lat_card_msg"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                android:textColor="@color/grey_black_tv"
                android:textSize="@dimen/text_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@id/tv_name"
                android:id="@+id/tv_type"
                android:layout_marginTop="13dp"
                android:textColor="@color/grey_black_tv2"
                android:textSize="@dimen/text_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_alignParentRight="true"
                android:src="@mipmap/more"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/white_corner_6dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:paddingTop="17dp"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_service_fee"
            android:drawablePadding="7dp"
            android:textColor="@color/grey_black_tv"
            android:textSize="@dimen/text_14"
            android:text="提现金额(服务费:2元/每笔)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="35dp"
            android:layout_marginBottom="13dp"
            android:textColor="@color/grey_black_tv"
            android:textSize="@dimen/text_18"
            android:id="@+id/tv_str_02"
            android:layout_below="@id/tv_service_fee"
            android:text="￥"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.ascba.rebate.view.EditTextHint
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:inputType="numberDecimal"
            android:id="@+id/et_money"
            android:maxLines="1"
            android:layout_toRightOf="@id/tv_str_02"
            android:layout_below="@id/tv_service_fee"
            android:background="@null"
            android:textColor="@color/grey_black_tv"
            android:textSize="@dimen/text_18"
            android:layout_width="match_parent"
            android:layout_height="44dp" />
        <View
            android:id="@+id/line"
            android:layout_below="@id/et_money"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_line"/>
        <TextView
            android:id="@+id/tv_status"
            android:text="可提现金额0.00"
            android:layout_below="@id/line"
            android:textSize="@dimen/text_12"
            android:textColor="@color/grey_black_tv2"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_apply"
        android:layout_marginTop="20dp"
        android:text="提现"
        style="@style/ButtonNormal" />
</LinearLayout>
