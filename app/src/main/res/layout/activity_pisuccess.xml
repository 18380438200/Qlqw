<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ascba.rebate.activities.personal_identification.PISuccessActivity">
    <com.ascba.rebate.view.MoneyBar
        app:textTitle="实名认证"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_56"/>
    <ImageView
        android:paddingTop="5dp"
        android:background="@color/blue_btn"
        android:src="@mipmap/pi_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:paddingTop="10dp"
        android:paddingBottom="25dp"
        android:gravity="center"
        android:background="@color/blue_btn"
        android:textColor="@color/white"
        android:textSize="@dimen/text_15"
        android:text="您已通过实名认证"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:background="@color/white"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:layout_centerVertical="true"
            android:text="真实姓名"
            android:textSize="@dimen/text_14"
            android:textColor="@color/grey_black_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_14"
            android:textColor="@color/grey_black_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_line"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:layout_centerVertical="true"
            android:text="年龄"
            android:textSize="@dimen/text_14"
            android:textColor="@color/grey_black_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_age"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_14"
            android:textColor="@color/grey_black_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_line"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:layout_centerVertical="true"
            android:text="性别"
            android:textSize="@dimen/text_14"
            android:textColor="@color/grey_black_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_sex"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_14"
            android:textColor="@color/grey_black_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_line"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:layout_centerVertical="true"
            android:text="身份证号"
            android:textSize="@dimen/text_14"
            android:textColor="@color/grey_black_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_card_num"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_14"
            android:textColor="@color/grey_black_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_line"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:layout_centerVertical="true"
            android:text="户口所在地"
            android:textSize="@dimen/text_14"
            android:textColor="@color/grey_black_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_location"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_14"
            android:textColor="@color/grey_black_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_line"/>
    </RelativeLayout>
</LinearLayout>
