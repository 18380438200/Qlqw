<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.ascba.rebate.view.MoneyBar
        android:id="@+id/mb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_56"
        app:textTitle="绑定手机号码" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textColor="@color/grey_black_tv"
                android:textSize="@dimen/text_14" />

            <com.ascba.rebate.view.ClearEditText
                android:id="@+id/bind_mobile_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="输入手机号码"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:paddingLeft="28dp"
                android:textColor="@color/grey_black_tv"
                android:textColorHint="@color/grey_tv"
                android:textSize="@dimen/text_13" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码"
                android:textColor="@color/grey_black_tv"
                android:textSize="@dimen/text_14" />

            <com.ascba.rebate.view.ClearEditText
                android:id="@+id/bind_code_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:maxLines="1"
                android:minWidth="240dp"
                android:paddingLeft="28dp"
                android:textColor="@color/grey_black_tv"
                android:textColorHint="@color/grey_tv"
                android:textSize="@dimen/text_13"
                app:hintSize="@dimen/text_13" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:background="@color/grey_line" />

            <TextView
                android:id="@+id/bind_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/grey_black_tv"
                android:textSize="@dimen/text_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_line" />

        <Button
            android:id="@+id/bind_btn"
            style="@style/ButtonNormal"
            android:layout_marginTop="50dp"
            android:text="提交" />
    </LinearLayout>

</LinearLayout>