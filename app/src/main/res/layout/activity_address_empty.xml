<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="84dp"
        android:src="@mipmap/address_empty" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp"
        android:text="您还没有收货地址哦~"
        android:textColor="@color/grey_black_tv2"
        android:textSize="@dimen/text_13" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/btn_pressed_shap"
        android:onClick="add">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@mipmap/add_white"
            android:drawablePadding="@dimen/padding_7dp"
            android:text="添加收货地址"
            android:textColor="@color/white"
            android:textSize="@dimen/text_15" />
    </FrameLayout>
</LinearLayout>
