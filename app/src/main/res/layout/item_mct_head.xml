<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <org.raphets.roundimageview.RoundImageView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"
        app:leftBottom_corner_radius="0dp"
        app:leftTop_corner_radius="7dp"
        app:rightBottom_corner_radius="0dp"
        app:rightTop_corner_radius="7dp"
        app:type="round" />

    <RelativeLayout
        android:id="@+id/lat_status"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/banner"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/msc_corner"
        android:paddingLeft="7dp"
        android:paddingRight="7dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/mct_circle_bg_02"
            android:text="筹备中"
            android:textColor="@color/white"
            android:textSize="@dimen/text_15" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lat_left_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <TextView
            android:id="@+id/tv_left_time_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年费剩余时间"
            android:textColor="@color/grey_black_tv"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/tv_left_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_left_time_str"
            android:layout_marginTop="12dp"
            android:textColor="@color/grey_black_tv"
            android:textSize="@dimen/text_12" />

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="26dp"
            android:background="@drawable/mct_circle_bg_03"
            android:text="续费" />
    </RelativeLayout>
</LinearLayout>