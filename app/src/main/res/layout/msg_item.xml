<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SelectBackgroundWhile"
    android:layout_width="match_parent"
    android:layout_height="72.5dp"
    android:paddingLeft="14dp"
    android:paddingRight="14dp">

    <ImageView
        android:id="@+id/iv_type"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginBottom="17dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="17dp" />

    <ImageView
        android:id="@+id/iv_read"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_alignRight="@id/iv_type"
        android:layout_marginTop="17dp"
        android:background="@drawable/red_corner_bg"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_type_string"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginTop="9dp"
        android:layout_toRightOf="@id/iv_type"
        android:gravity="center"
        android:textColor="@color/grey_black_tv"
        android:textSize="@dimen/text_14" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="21dp"
        android:gravity="center"
        android:textColor="@color/grey_black_tv3"
        android:textSize="@dimen/text_12" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/tv_type_string"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/iv_type"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/grey_black_tv2"
        android:textSize="@dimen/text_13" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_line" />
</RelativeLayout>