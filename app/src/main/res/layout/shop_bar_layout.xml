<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/money_bar_parent"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            style="@style/SelectBackgroundBorderless"
            android:id="@+id/money_bar_back_lat"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="25dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/im_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center" />
            <TextView
                android:text="返回"
                android:id="@+id/tv_back"
                android:textSize="@dimen/text_14"
                android:textColor="@color/grey_black_tv"
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:text="标题"
            android:id="@+id/money_bar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/grey_black_tv"
            android:textSize="@dimen/text_16" />
    </RelativeLayout>
    <TextView
        android:text="尾巴"
        style="@style/SelectBackgroundBorderless"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:id="@+id/tail_text"
        android:textSize="@dimen/text_14"
        android:textColor="@color/grey_black_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <View
        android:id="@+id/money_bar_line"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</RelativeLayout>