<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="9dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:paddingTop="20dp">

    <ImageView
        android:id="@+id/home_icon"
        android:layout_width="35dp"
        android:layout_height="35dp" />

    <TextView
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@id/home_icon"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_black_tv2"
        android:textSize="@dimen/text_13" />

    <TextView
        android:layout_below="@id/tv_title"
        android:layout_alignLeft="@id/tv_title"
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/grey_black_tv3"
        android:textSize="@dimen/text_11" />

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/tv_money"
        android:layout_below="@id/tv_time"
        android:layout_alignLeft="@id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_black_tv"
        android:textSize="@dimen/text_20" />
    <TextView
        android:layout_below="@id/tv_money"
        android:layout_alignLeft="@id/tv_title"
        android:layout_marginTop="15dp"
        android:textColor="@color/grey_black_tv"
        android:textSize="@dimen/text_14"
        android:id="@+id/tv_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_det"
        android:layout_below="@id/tv_success"
        android:layout_alignLeft="@id/tv_title"
        android:layout_marginTop="15dp"
        android:textColor="@color/grey_black_tv3"
        android:textSize="@dimen/text_13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/line"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tv_det"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_line"/>
    <TextView
        android:id="@+id/tv_more"
        android:gravity="center"
        android:textColor="@color/grey_black_tv"
        android:textSize="@dimen/text_13"
        android:text="查看更多"
        android:layout_below="@id/line"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</RelativeLayout>