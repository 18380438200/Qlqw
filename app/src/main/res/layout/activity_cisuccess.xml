<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.ascba.rebate.view.MoneyBar
        app:textTitle="企业认证"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_56"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:paddingTop="5dp"
                android:background="@color/blue_btn"
                android:src="@mipmap/pi_success"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingTop="10dp"
                android:paddingBottom="25dp"
                android:gravity="center"
                android:background="@color/blue_btn"
                android:textColor="@color/white"
                android:textSize="@dimen/text_15"
                android:text="您已通过企业认证"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:background="@color/white"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:id="@+id/str1"
                    android:layout_centerVertical="true"
                    android:text="公司名称"
                    android:textSize="@dimen/text_14"
                    android:textColor="@color/grey_black_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:layout_marginLeft="14dp"
                    android:layout_toRightOf="@id/str1"
                    android:id="@+id/tv_name"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_14"
                    android:textColor="@color/grey_black_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey_line"/>
            </RelativeLayout>
            <RelativeLayout
                android:background="@color/white"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:text="法人"
                    android:textSize="@dimen/text_14"
                    android:textColor="@color/grey_black_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_law_name"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_14"
                    android:textColor="@color/grey_black_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey_line"/>
            </RelativeLayout>
            <RelativeLayout
                android:background="@color/white"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:text="注册资本"
                    android:textSize="@dimen/text_14"
                    android:textColor="@color/grey_black_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_money"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_14"
                    android:textColor="@color/grey_black_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey_line"/>
            </RelativeLayout>
            <RelativeLayout
                android:background="@color/white"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:text="公司状态"
                    android:textSize="@dimen/text_14"
                    android:textColor="@color/grey_black_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_status"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_14"
                    android:textColor="@color/grey_black_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey_line"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/lat_scope"
                android:background="@color/white"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:text="经营范围"
                    android:textSize="@dimen/text_14"
                    android:textColor="@color/grey_black_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@mipmap/more"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey_line"/>
            </RelativeLayout>
            <RelativeLayout
                android:background="@color/white"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:text="操作人"
                    android:textSize="@dimen/text_14"
                    android:textColor="@color/grey_black_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_mine_name"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_14"
                    android:textColor="@color/grey_black_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <Button
                android:visibility="gone"
                android:id="@+id/btn_apply"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="15dp"
                android:text="是否立即完善商家资料"
                style="@style/ButtonNormal" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
