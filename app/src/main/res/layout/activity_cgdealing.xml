<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ascba.rebate.activities.cash_get.CGDealingActivity">
    <com.ascba.rebate.view.MoneyBar
        android:id="@+id/mb"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:textTitle="提现结果"/>
    <ImageView
        android:background="@color/white"
        android:paddingTop="65dp"
        android:src="@mipmap/recharge_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_title"
        android:gravity="center_horizontal"
        android:paddingTop="15dp"
        android:textColor="@color/grey_black_tv"
        android:textSize="@dimen/text_21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_status"
        android:gravity="center_horizontal"
        android:paddingTop="15dp"
        android:textColor="@color/grey_black_tv2"
        android:textSize="@dimen/text_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.ascba.rebate.view.timeline.HorizontalStepView
        android:id="@+id/step_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_complete"
        android:layout_marginTop="50dp"
        android:text="完成"
        style="@style/ButtonNormal"
        android:enabled="true"/>
</LinearLayout>
