<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ascba.rebate.activities.mine.SettingActivity">

    <com.ascba.rebate.view.MoneyBar
        android:id="@+id/mb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_56"
        app:textTitle="设置" />

    <RelativeLayout
        android:id="@+id/address_rl"
        style="@style/SelectBackgroundWhile"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="我的收货地址"
            android:textColor="@color/grey_black_tv"
            android:textSize="@dimen/text_14" />

        <ImageView
            android:id="@+id/setting_address_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/more" />
    </RelativeLayout>

    <include layout="@layout/mine_line" />

    <RelativeLayout
        android:id="@+id/account_rl"
        style="@style/SelectBackgroundWhile"
        android:layout_width="match_parent"
        android:layout_height="48.5dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="账号与安全"
            android:textColor="@color/grey_black_tv"
            android:textSize="@dimen/text_14" />

        <ImageView
            android:id="@+id/setting_account_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/more" />

        <View
            style="@style/LineHorizontal"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/clean_rl"
        style="@style/SelectBackgroundWhile"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="清除本地缓存"
            android:textColor="@color/grey_black_tv"
            android:textSize="@dimen/text_14" />


        <ImageView
            android:id="@+id/setting_clean_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/more" />

        <TextView
            android:id="@+id/setting_clean_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_7dp"
            android:layout_toLeftOf="@+id/setting_clean_more"
            android:text="0"
            android:textColor="@color/grey_black_tv2"
            android:textSize="@dimen/text_14" />
    </RelativeLayout>

    <include layout="@layout/mine_line" />

    <RelativeLayout
        android:id="@+id/about_rl"
        style="@style/SelectBackgroundWhile"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="关于钱来钱往"
            android:textColor="@color/grey_black_tv"
            android:textSize="@dimen/text_14" />

        <ImageView
            android:id="@+id/setting_about_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/more" />
    </RelativeLayout>

    <android.support.v4.widget.Space
        android:layout_width="wrap_content"
        android:layout_height="100dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/btn_pressed_shap"
        android:onClick="logout"
        android:text="安全退出"
        android:textColor="@color/white"
        android:textSize="@dimen/text_15" />
</LinearLayout>
