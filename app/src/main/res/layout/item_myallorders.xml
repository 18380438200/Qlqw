<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="73dp"
    android:id="@+id/myallorders_item">

    <ImageView
        android:id="@+id/myallorders_icon"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp" />
    <LinearLayout
        android:id="@+id/myallorders_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@id/myallorders_icon"
        android:orientation="vertical">
        <TextView
            android:id="@+id/myallorders_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="-38.00"
            android:textColor="@color/grey_black_tv"
            android:textSize="@dimen/text_14" />
        <TextView
            android:id="@+id/myallorders_category_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:maxEms="8"
            android:textSize="@dimen/text_12"
            android:maxLines="1"
            android:text="2017-07-04 08:32" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_gravity="right"
            android:id="@+id/myallorders_pay_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="现金付款"
            android:textSize="@dimen/text_14"
            android:textColor="@color/grey_black_tv"/>
        <TextView
            android:layout_gravity="right"
            android:id="@+id/await_sure_order"
            android:layout_marginTop="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待确认"
            android:textColor="@color/yellow"
            android:textSize="@dimen/text_13" />
    </LinearLayout>
    <View
        android:background="@color/grey_line"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
</RelativeLayout>
